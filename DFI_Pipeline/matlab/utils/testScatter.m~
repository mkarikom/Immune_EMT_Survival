
figure;
tiledlayout(3,1);
t1=nexttile;
[X,Y] = meshgrid(1:0.5:10,1:20);
Z = sin(X) + cos(Y);
pcolor(X,Y,Z)
cmorig = colormap(gca);
view(2)
colorbar;
lim = caxis;

t2=nexttile;
Z2 = 0.5*Z;
pcolor(X,Y,Z2)
view(2)
caxis(t2,lim);
colorbar

t3=nexttile;
Z2 = 0.5*Z;
pcolor(X,Y,Z2)
view(2)
caxis(t2,lim);
colorbar;